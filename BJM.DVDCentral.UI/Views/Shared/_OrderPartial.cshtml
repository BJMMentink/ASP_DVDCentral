@model IEnumerable<BJM.DVDCentral.BL.Models.OrderItem>

@if (Model != null && Model.Any())
{
    <dl class="row">
        <dt class="col-md-2">Movie ID</dt>
        <dd class="col-md-8">
            <table class="table">
                <thead>
                    <tr>
                        <th>Movie ID</th>
                        <th>Quantity</th>
                        <th>Cost</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        @* foreach (var item in order.Items)
                        { *@
                            <tr>
                            <td>@Html.DisplayFor(modelItem => order.MovieId)</td>
                            <td>@Html.DisplayFor(modelItem => order.Quantity)</td>
                            <td>@Html.DisplayFor(modelItem => order.Cost)</td>
                                <td>
                                <a asp-controller="Advisor" asp-action="Edit" asp-route-id="@order.Id">Edit</a>
                                <a asp-controller="Advisor" asp-action="Details" asp-route-id="@order.Id">Details</a>
                                <a asp-controller="Advisor" asp-action="Delete" asp-route-id="@order.Id">Delete</a>
                                </td>
                            </tr>
                       @*  } *@
                    }
                </tbody>
            </table>
        </dd>
    </dl>
}

<script type="text/javascript" class="init">
    $.noConflict();
    jQuery(document).ready(function ($) {
        $('#students').DataTable({
            "lengthMenu": [[5, 10, 25, 30, -1], [5, 10, 25, 30, "All"]]
        });
    });
</script>
